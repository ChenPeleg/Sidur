{
    "name": "Sidur",
    "version": "0.1.0",
    "private": true,
    "homepage": "https://chenpeleg.github.io/Sidur",
    "homepage-gh-pages": "https://chenpeleg.github.io/Sidur",
    "type": "module",
    "engines": {
        "node": "24.x"
    },
    "scripts": {
        "dev": "vite",
        "start": "vite",
        "build": "tsc && vite build",
        "typecheck": "tsc",
        "build:gh-pages": "tsc && vite build --mode production-github",
        "build:site": "tsc && vite build --mode production-firebase",
        "build:prod": "tsc && vite build --mode production-firebase",
        "preview": "vite preview",
        "test": "vitest run",
        "test:watch": "vitest",
        "test:ui": "vitest --ui",
        "predeploy": "npm run build:gh-pages",
        "deploy": "gh-pages -d build",
        "format": "prettier --write ."
    },
    "dependencies": {
        "@emotion/react": "^11.14.0",
        "@emotion/styled": "^11.14.0",
        "@mui/icons-material": "^7.3.5",
        "@mui/lab": "^7.0.1-beta.21",
        "@mui/material": "^7.3.5",
        "@mui/x-date-pickers": "^8.26.0",
        "@redux-devtools/extension": "^3.3.0",
        "@types/react": "^19.2.10",
        "@types/react-dom": "^19.2.3",
        "date-fns": "^4.1.0",
        "final-form": "^5.0.0",
        "react": "^19.2.4",
        "react-dom": "^19.2.4",
        "react-final-form": "^7.0.0",
        "react-redux": "^9.2.0",
        "react-router-dom": "^7.2.1",
        "redux": "^5.0.1",
        "typescript": "^5.7.3",
        "web-vitals": "^5.1.0"
    },

    "eslintConfig": {
        "extends": [
            "react-app"
        ]
    },
    "browserslist": {
        "production": [
            ">0.2%",
            "not dead",
            "not op_mini all"
        ],
        "development": [
            "last 1 chrome version",
            "last 1 firefox version",
            "last 1 safari version"
        ]
    },
    "devDependencies": {
        "@testing-library/jest-dom": "^6.6.3",
        "@testing-library/react": "^16.1.0",
        "@testing-library/user-event": "^14.5.2",
        "@types/node": "^25.1.0",
        "@vitejs/plugin-react": "^4.3.4",
        "@vitest/ui": "^2.1.8",
        "eslint": "^9.31.0",
        "eslint-plugin-react": "^7.37.5",
        "gh-pages": "^6.2.0",
        "jsdom": "^26.0.0",
        "prettier": "^3.3.2",
        "typescript": "^5.7.2",
        "typescript-eslint": "^8.38.0",
        "vite": "^6.0.7",
        "vitest": "^2.1.8"
    }
}
