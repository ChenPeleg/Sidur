{
    "name": "Sidur",
    "version": "0.1.0",
    "private": true,
    "homepage": "https://chenpeleg.github.io/Sidur",
    "homepage-gh-pages": "https://chenpeleg.github.io/Sidur",
    "type": "module",
    "engines": {
        "node": "24.x"
    },
    "scripts": {
        "dev": "vite",
        "start": "vite",
        "build": "tsc && vite build",
        "typecheck": "tsc",
        "build:gh-pages": "tsc && vite build --mode production-github",
        "build:site": "tsc && vite build --mode production-firebase",
        "build:prod": "tsc && vite build --mode production-firebase",
        "preview": "vite preview",
        "test": "vitest run",
        "test:watch": "vitest",
        "test:ui": "vitest --ui",
        "predeploy": "npm run build:gh-pages",
        "deploy": "gh-pages -d build",
        "format": "prettier --write ."
    },
    "dependencies": {
        "@emotion/react": "^11.14.0",
        "@emotion/styled": "^11.14.1",
        "@mui/icons-material": "^7.3.7",
        "@mui/lab": "^7.0.1-beta.21",
        "@mui/material": "^7.3.7",
        "@mui/x-date-pickers": "^8.26.0",
        "@redux-devtools/extension": "^3.3.0",
        "@types/react": "^19.2.10",
        "@types/react-dom": "^19.2.3",
        "date-fns": "^4.1.0",
        "react": "^19.2.4",
        "react-dom": "^19.2.4",
        "react-redux": "^9.2.0",
        "react-router-dom": "^7.13.0",
        "redux": "^5.0.1",
        "typescript": "^5.9.3",
        "web-vitals": "^5.1.0"
    },
    "devDependencies": {
        "@testing-library/jest-dom": "^6.9.1",
        "@testing-library/react": "^16.3.2",
        "@testing-library/user-event": "^14.6.1",
        "@types/node": "^25.1.0",
        "@vitejs/plugin-react": "^5.1.2",
        "eslint": "^9.39.2",
        "eslint-plugin-react": "^7.37.5",
        "gh-pages": "^6.3.0",
        "jsdom": "^27.4.0",
        "prettier": "^3.8.1",
        "typescript-eslint": "^8.54.0",
        "vite": "^7.3.1",
        "vitest": "^4.0.18"
    }
}
